<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShiftScreen" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/blue_100</item>
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/blue_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Light Dialog theme -->
    <style name="Theme.ShiftScreen.Light" parent="Theme.ShiftScreen">
        <!-- Alert Dialog Text Colors-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorAlertDialogListItem">@color/black</item>
        <!-- Alert Dialog Icon Color-->
        <item name="android:tint">@color/black</item>
        <!-- Alert Dialog Background-->
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">2dp</item>
    </style>
    <!-- Dark Dialog theme -->
    <style name="Theme.ShiftScreen.Dark" parent="Theme.ShiftScreen">
        <!-- Alert Dialog Text Colors-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <!-- Alert Dialog Icon Color-->
        <item name="android:tint">@color/white</item>
        <!-- Alert Dialog Background-->
        <item name="android:background">@color/black_100</item>
        <item name="android:paddingLeft">2dp</item>
    </style>
</resources>
